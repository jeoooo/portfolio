---
import Head from "../components/astro-components/Head.astro";
import Intro from "../components/svelte-components/Intro.svelte";
import About from "../components/svelte-components/About.svelte";
import Stack from "../components/svelte-components/Stack.svelte";
import Experience from "../components/svelte-components/Experience.svelte";
---

<html lang="en">
	<!-- Head tag + meta tags -->
	<head>
		<Head /> 
		<style>
			#particles-js canvas {
				  display: block;
				  /* vertical-align: bottom; */
				  -webkit-transform: scale(1);
				  -ms-transform: scale(1);
				  transform: scale(1);
				  opacity: 1;
				  -webkit-transition: opacity .8s ease, -webkit-transform 1.4s ease;
				  transition: opacity .8s ease, transform 1.4s ease
			}
	
			#particles-js {
				width: 100%;
				height: 100%;
				position: fixed;
				z-index: -10;
				top: 0;
				left: 0
			}
		</style>
	</head>
	
	<!-- pair w/ #f7d3f5 -->
	<body class="bg-[#281fd7] "> 
		<!-- <Navbar/> -->
		<section id="content">
			<!-- <div id="particles-js" class="absolute inset-0 z-[-1]"></div> -->
			<Intro />
			<About />
			<Stack />
			<Experience />
			<!-- <Education /> -->
			<!-- <Projects /> -->
			<!-- <Awards /> -->
			<!-- <Footer/> -->
		</section>
		
		    <!-- Particle.js initialization script -->
			<script is:inline>
				particlesJS.load("particles-js", "/portfolio/particles.json", function () {
				  console.log("callback - particles.js config loaded");
				});
			</script>
	</body>


</html>


