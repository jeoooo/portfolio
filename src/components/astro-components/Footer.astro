---
import Styles from "../../utils/styles.astro";

let year = new Date().getFullYear();
---

<footer class="bg-black text-white py-4">
  <div class="flex flex-col items-center justify-center mx-4 md:mx-24 lg:mx-72">
    <p class="font-syne font-bold font-helvetica">
      {year}. Made with
      <a href="https://astro.build/" target="_blank" rel="noopener noreferrer">
        <img class="ml-1 mt-1 h-5 mr-1 inline" alt="simple-icon" src="https://cdn.simpleicons.org/astro/fff"/>
      </a>
      +
      <a href="https://svelte.dev/" target="_blank" rel="noopener noreferrer">
        <img class="ml-1 mt-1 h-5 mr-1 inline" alt="simple-icon" src="https://cdn.simpleicons.org/svelte/fff"/>
      </a>
      +
      <img class="ml-1 mt-1 h-5 mr-1 inline" alt="simple-icon" src="https://cdn.simpleicons.org/typescript/fff"/>
      +
      <a class="ml-1 hover:underline" href="https://vincentgarreau.com/particles.js/#default" target="_blank" rel="noopener noreferrer">
        particles.js
      </a>
    </p>
  </div>
</footer>
